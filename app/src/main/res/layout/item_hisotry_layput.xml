<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="@dimen/margin_padding_8dp"
    android:background="@drawable/ic_item_history"
    android:layout_margin="@dimen/margin_padding_4dp"
    android:layout_height="@dimen/margin_padding_72dp"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/txt_title"
            android:gravity="center|left"
            android:text="EP"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/black"
            tools:ignore="HardcodedText,RtlHardcoded" />


    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/txt_price"
            android:gravity="center|left"
            android:text="@string/_200_so_m"
            android:fontFamily="@font/inter_regular"
            android:textColor="@color/black"
            tools:ignore="RtlHardcoded" />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/txt_date"
            android:gravity="center|right"
            android:text="@string/_2023_01_25_19_11_11"
            android:fontFamily="@font/inter_regular"
            android:textColor="@color/black"
            tools:ignore="RtlHardcoded" />
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>