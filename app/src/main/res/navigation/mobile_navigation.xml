<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="uz.toza.tozauz.ui.fragment.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="uz.toza.tozauz.ui.fragment.history.HistoryFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="uz.toza.tozauz.ui.fragment.notifications.BalanceFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" >
        <action
            android:id="@+id/action_navigation_notifications_to_fragment_add_card"
            app:destination="@id/fragment_add_card" />
    </fragment>

    <fragment
        android:id="@+id/fragment_add_card"
        android:name="uz.toza.tozauz.ui.fragment.notifications.AddCardFragment"
        tools:layout="@layout/fragment_add_card" />
</navigation>